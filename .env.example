# Supabase (Backend - DO NOT expose to frontend)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenRouter (Backend - DO NOT expose to frontend)
OPENROUTER_API_KEY=sk-or-v1-xxxxx

# Stripe (Backend - DO NOT expose to frontend)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# Cloudflare Worker Configuration
WORKER_URL=https://your-worker.workers.dev
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Pricing Configuration
MARKUP_PERCENTAGE=5

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NOTE: Variables prefixed with NEXT_PUBLIC_ are exposed to the browser.
# All other variables are server-side only and MUST be kept secure.
#
# IMPORTANT: This single .env.local file is used by BOTH:
#   1. Next.js dashboard (reads directly)
#   2. Cloudflare Worker (auto-generates .dev.vars from this file via predev script)
